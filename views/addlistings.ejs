


<h2>Add New Listing</h2>
<form action="/add-listing" method="post" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" required placeholder="e.g 2-bedroom" /> <br>

    <label for="price">Price</label>
    <input type="text" id="price" name="price" required placeholder="e.g â‚¦1million or 800k"/> <br>

    <label for="location">Location</label>
    <input type="text" id="location" name="location" required placeholder="e.g Agip"> <br>

    <label for="type">Type</label>
    <select name="type" id="type">
        <option value="rent">Rent</option>
        <option value="sale">Sale</option>
    </select>

    <label for="bedrooms">Bedrooms</label>
    <input type="number" id="bedrooms" name="bedrooms" min="0" required />

    <label for="image">Image:</label>
    <input type="file" id="image" name="image" accept="image/*" required />


    <button type="submit">Add Listing</button>
</form>













